{
  "manifest_version": 3,
  "name": "TEAN Mate",
  "description": "An AI-powered accessibility tool with a sidebar.",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "sidePanel"
  ],
  "host_permissions": [
    "https://cdn.jsdelivr.net/*",
    "https://cdnjs.cloudflare.com/*",
    "<all_urls>"
  ],
  "action": {
    "default_title": "Accessibility Tools"
  },
  "background": {
    "service_worker": "background.bundle.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.bundle.js"],
      "run_at": "document_end", 
      "all_frames": true        
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": [
        "sidebar.html",
        "sidebar.bundle.js",
        "icons/*",
        "TTS/*",
        "*.wasm",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:8080; object-src 'self'"
  },
  "commands": {
    "access-link": {
      "suggested_key": {
        "default": "Ctrl+Up"
      },
      "description": "Access current link"
    }
  }
}
