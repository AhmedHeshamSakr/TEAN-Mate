{
    "manifest_version": 3,
    "name": "TEAN Mate",
    "description": "An AI-powered accessibility tool with a sidebar.",
    "version": "1.0",
    "permissions": [
      "storage",
      "activeTab",
      "scripting",
      "tabs",
      "sidePanel"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_title": "Accessibility Tools"
     
    },
    "background": {
      "service_worker": "background.bundle.js",
      "type": "module"
    },
    "side_panel": {
      "default_path": "sidebar.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.bundle.js"],
        "css": ["sidebar.css"]
      }
    ],
   

    "content_security_policy": {
      "extension_pages": "script-src 'self' http://localhost:8080; object-src 'self'"
    },
    "commands": {
      "skip-next": {
        "suggested_key": {
          "default": "Ctrl+Right"
        },
        "description": "Skip to next section"
      },
      "skip-previous": {
        "suggested_key": {
          "default": "Ctrl+Left"
        },
        "description": "Skip to previous section"
      },
      "toggle-reading": {
        "suggested_key": {
          "default": "Ctrl+Space"
        },
        "description": "Pause and continue reading"
      },
      "access-link": {
        "suggested_key": {
          "default": "Ctrl+Up"
        },
        "description": "Access current link"
      }
    }
  }